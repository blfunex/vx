{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "group": "build",
      "label": "Start live server",
      "command": "live-server",
      "args": ["public", "--no-browser", "--no-css-inject", "--wait=500"],
      "isBackground": true,
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Compile project incrementaly",
      "type": "shell",
      "command": "nodemon",
      "args": ["-e", "ts", "-x", "yarn build"],
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"],
      "group": "build",
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
